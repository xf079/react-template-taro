{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "declaration": false,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types", "typings", "src/typings"],
    "paths": {
      "@/*": ["src/*"],
      "@linkio/hooks": ["./packages/hooks/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "lib", "es", "dist"],
  "compileOnSave": false
}
